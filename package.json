{
  "name": "task-priority-app",
  "version": "1.0.0",
  "description": "Task Priority Framework - Fullstack Application with Cloudflare Workers",
  "scripts": {
    "setup-local": "node scripts/setup-local-db.js",
    "dev": "npm run setup-local && concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "vite",
    "dev:server": "npx tsx scripts/dev-server.js",
    "dev:demo": "vite --mode demo",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "tsc && wrangler deploy --dry-run",
    "build:demo": "vite build --mode demo",
    "deploy": "npm run build:client && wrangler deploy",
    "deploy:demo": "npm run build:demo && wrangler deploy --config wrangler.demo.toml",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply task-priority-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply task-priority-db",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/zod-validator": "^0.3.0",
    "drizzle-orm": "^0.33.0",
    "hono": "^4.6.3",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0",
    "recharts": "^3.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241106.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "better-sqlite3": "^9.6.0",
    "concurrently": "^9.0.1",
    "drizzle-kit": "^0.24.2",
    "eslint": "^9.13.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.20.6",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "wrangler": "^4.40.2"
  },
  "type": "module"
}
